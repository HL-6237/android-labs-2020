<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentProviderActivity">

    <TextView
        android:id="@+id/trading_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="交易记录"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/trading_cover"
        android:layout_width="512px"
        android:layout_height="512px"
        android:src="@drawable/logo"
        android:layout_below="@+id/trading_title"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/trading_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商家名"
        android:layout_below="@+id/trading_cover"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/trading_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="收支情况"
        android:layout_below="@+id/trading_name"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_below="@+id/trading_tags"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一个"
        android:layout_below="@+id/trading_tags"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
